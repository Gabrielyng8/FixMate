@page "/tutorials"
@rendermode InteractiveServer

<PageTitle>Tutorials</PageTitle>

<h1>Tutorials</h1>

<section class="general-tutorials my-4">
    <h3>General Tutorials</h3>
    <div class="row">
        @foreach (var t in generalTutorials)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@t.ImageUrl" class="card-img-top" alt="@t.Title placeholder image">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@t.Title</h5>
                        <p class="card-text">@t.Description</p>
                        <NavLink class="btn btn-primary mt-auto" href="@t.Link">View Tutorial</NavLink>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@code {
    private class Tutorial
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string ImageUrl { get; set; } = string.Empty;
        public string Link { get; set; } = string.Empty;
    }

    private List<Tutorial> generalTutorials = new()
    {
        new Tutorial
        {
            Title = "Oil Change Basics",
            Description = "Step-by-step guide to changing your engine oil safely.",
            ImageUrl = "images/placeholder-oil.jpg",
            Link = "tutorials/oil-change"
        },
        new Tutorial
        {
            Title = "Brake Pad Replacement",
            Description = "Learn how to replace worn brake pads in minutes.",
            ImageUrl = "images/placeholder-brakes.jpg",
            Link = "tutorials/brake-pad-replacement"
        },
        new Tutorial
        {
            Title = "Battery Jumpstart",
            Description = "Quick method to jumpstart a dead car battery.",
            ImageUrl = "images/placeholder-battery.jpg",
            Link = "tutorials/jumpstart-battery"
        },
        new Tutorial
        {
            Title = "Windscreen Wiper Replacement",
            Description = "Learn how to replace windscreen wipers.",
            ImageUrl = "images/placeholder-wipers.jpg",
            Link = "tutorials/replace-wipers"
        }
    };
}
